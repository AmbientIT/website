<div class="bg" style="height:350px;">
  <div class="banner" style="position:relative;">
    <div class="container">
      <div class="banner-info text-center">
        <h1>
          Recherche de Formations
        </h1>
        <br/>
        <span> </span>
        <form id="search-form" class="form-inline" action="/formations/search" method="get" style="position:absolute; bottom:5px;right:100px;">
          <div class="input-group">
            <input type="search" placeholder="Que cherchez vous ?" name="q" class="form-control" >
            <a href="javascript:{}" onclick="document.getElementById('search-form').submit();" class="btn input-group-addon" >Search</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<section class="container">
  <div class="row container-fluid" >
    <% if (formations.length === 0){ %>
    <div style="text-align:center; transform: rotate(90deg); font-size: 3em;">
      :(
    </div>
    <p style="text-align: center;">
      Aucune formation ne correspond à votre recherche
    </p>
    <a href="" class="btn btn-block btn-default" style="margin-top:100px;">Suggérez nous la formation que vous souhaitez</a>
    <% } %>
  </div>
  <div class="row container-fluid" style="margin-top:50px;">
    <ul class="media-list">
      <% formations.forEach(function(formation){ %>
      <li class="media">
        <div class="media-left">
          <img class="media-object" src="../images/formation/logo.jpg" alt="<% formation.name %> logo">
        </div>
        <div class="media-body">
          <a href="/formation/<%= formation.slug %>">
            <h4 class="media-heading"><%= formation.name %></h4>
          </a>
          <%= formation.description %>
        </div>
      </li>
      <% }) %>
    </ul>
  </div>
</section>
